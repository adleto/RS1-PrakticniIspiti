@model RS1_Ispit_asp.net_core.ViewModels.UrediDodajStavkaVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form ajax-poziv="da" ajax-url="/IspitniTermini/DodajStavku" ajax-rezultat="ajaxDiv">
    Student: <select asp-for="SlusaPredmetId">
        @foreach(var x in Model.SlusaPredmetList)
        {
                 <option value="@x.Id">@(x.UpisGodine.Student.Ime  + " " + x.UpisGodine.Student.Prezime)</option>
        }
    </select> 
    <br />

    <input asp-for="IspitId" type="hidden" />
    <input type="submit" value="Snimi" />
</form>
