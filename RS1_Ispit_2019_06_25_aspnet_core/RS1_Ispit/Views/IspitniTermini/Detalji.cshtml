@model RS1_Ispit_asp.net_core.ViewModels.DodajIspitVM
@{
    ViewData["Title"] = "Detalji";
}

<h4>Detalji ispita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Predmet" class="control-label"></label>
                <input asp-for="Predmet" class="form-control" readonly />
                <span asp-validation-for="Predmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nastavnik" class="control-label"></label>
                <input asp-for="Nastavnik" class="form-control" readonly />
                <span asp-validation-for="Nastavnik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Školska Godina</label>
                <input asp-for="SkolskaGodina" class="form-control" readonly />
                <span asp-validation-for="SkolskaGodina" class="text-danger"></span>
            </div>

            <input asp-for="AngazovanId" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" type="date" class="form-control" readonly />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Napomena" class="control-label"></label>
                <textarea asp-for="Napomena" class="form-control"  readonly>
                </textarea>
                <span asp-validation-for="Napomena" class="text-danger"></span>
            </div>
    </div>
</div>
<div id="ajaxDiv"></div>

<script>
    $(function () {
        $.get("/IspitniTermini/GetStavke?ispitId=@Model.IspitId", function (data) {
            $("#ajaxDiv").html(data);
        });
    });
</script>

