@model RS1_Ispit_asp.net_core.ViewModels.UrediStavkuVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form ajax-poziv='da' ajax-url="/OdrzanaNastava/UrediStavku" ajax-rezultat="ajaxDiv">
    Ucenik: @Model.Ucenik<br />
    Rezultat: @if (Model.Rezultat != -1)
    {
        <input asp-for="Rezultat" />
    }
    else
    {
        <input type="number" name="Rezultat" />
    }
    <br />
    <input asp-for="IspitId" type="hidden" />
    <input asp-for="StavkaId" type="hidden" />
    <input type="submit" value="Snimi" />
</form>
