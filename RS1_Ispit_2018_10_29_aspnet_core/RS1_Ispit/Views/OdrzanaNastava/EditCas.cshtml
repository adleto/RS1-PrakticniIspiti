@model RS1_Ispit_asp.net_core.ViewModels.EditCasVM

@{
    ViewData["Title"] = "EditCas";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CasId" class="form-control" />

            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input readonly asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odjeljenje" class="control-label"></label>
                <input readonly asp-for="Odjeljenje" class="form-control" />
                <span asp-validation-for="Odjeljenje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sadrzaj" class="control-label"></label>
                <input asp-for="Sadrzaj" class="form-control" />
                <span asp-validation-for="Sadrzaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div id="ajaxDiv"></div>

<script>
    $(function () {
        $.get("/OdrzanaNastava/GetStavkeCas?casId=@Model.CasId", function (data) {
            $("#ajaxDiv").html(data);
        });
    });
</script>

