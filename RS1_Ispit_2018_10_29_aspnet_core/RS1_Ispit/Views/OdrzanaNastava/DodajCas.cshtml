@model RS1_Ispit_asp.net_core.ViewModels.DodajCasVM

@{
    ViewData["Title"] = "DodajCas";
}

<h2>Dodaj Cas</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DodajCas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Nastavnik: @Model.Nastavnik
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input name="Datum" type="date" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Odjeljenje/Predmet</label>
                <select asp-for="PredajePredmetId" class="form-control">
                    <option>Odaberi predmet</option>
                    @foreach (var p in Model.PredajePredmetOdjeljenjeList)
                    {
                        <option value="@p.Id">@(p.Odjeljenje.Razred + "-"+p.Odjeljenje.Oznaka + " / "+ p.Predmet.Naziv)</option>
                    }
                </select>
                <span asp-validation-for="PredajePredmetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

